                </div> -->
                <!-- nút thêm mới-->
                <button type="button" class="btn btn-success rounded-pill m-2" data-bs-toggle="modal"
                    data-bs-target="#exampleModal">
                    Get New Project
                </button>

                <!-- Form thêm mới-->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Get New Project</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/project/<%=id%>" method="post" class="createForm">
                                    Title:<input name="title" type="text"> <br>
                                    Detail:<input name="detail" type="text"> <br>
                                    Status:
                                    <select name="status" id="">
                                        <option value="undone" selected>Undone</option>
                                    </select>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button class="btn btn-primary">Get new</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
        </div>
        <div class="content" style="overflow: hidden;">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <%for (const project of projects) { %>
                    <div class="col ">
                        <input type="hidden" name="projectId" value="<%=project._id%>">
                        <input type="hidden" name="userId" value="<%=id%>">
                        <div class="card p-3" style="cursor: pointer;">
                            <img src="/public/img/bg.png" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=project.title %>
                                </h5>
                                <p class="card-text">
                                    <%=project.detail%>
                                </p>
                                <p class="card-text">
                                    <span class="badge bg-secondary">
                                        <%=project.status%>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>

        </div>
    </div>
    </div>
</body>
