                        <option value="undone">Undone</option>
                        <option value="done">Done</option>
                    </select>
                        <button class="btn btn-dark rounded-pill m-2 ">Search</button>
                    </form>
                </div> -->
                <!-- nút thêm mới-->
                <button type="button" class="btn btn-success rounded-pill m-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Get New Project
                </button>

                <!-- Form thêm mới-->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Get New Project</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="createForm">
                                    Title:<input name="title" type="text"> <br> Detail:
                                    <input type="hidden" name="userId">
                                    <input name="detail" type="text"> <br> Status:
                                    <select name="status" id="stt">
                                        <option value="undone">Undone</option>
                                        <option value="done" >Done</option>
                                    </select>
    
                            </div>
    
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button class="btn btn-primary btngetnew" data-bs-dismiss="modal">Get new</button>
                            </div>
                                </div>
                        </div>
                    </div>
                </div>
        </div>
        <div class="content" style="overflow: hidden;">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <%for (const project of projects) { %>
                    <div class="col ">
                        <input type="hidden" name="projectId" value="<%=project._id%>">
                        <input type="hidden" name="userId" value="">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-primary btn-sm btnEdit" onclick='updateSubmit("<%=project._id%>")' data-modal-target="#formEdit">Edit</button>
                        </div>
                        <div class="card p-3" style="cursor: pointer;">
                            <img src="/public/img/bg.png" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=project.title %>
                                </h5>
                                <p class="card-text">
                                    <%=project.detail%>
                                </p>
                                <p class="card-text">
                                    <span class="badge bg-secondary">
                                        <%=project.status%>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <%for (const colabor of colaborator) { %>
                    <div class="col ">
                        <input type="hidden" name="projectId" value="<%=colabor._id%>">
                        <input type="hidden" name="userId" value="">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-primary btn-sm btnEdit" onclick='updateSubmit("<%=colabor._id%>")' data-modal-target="#formEdit">Edit</button>
                        </div>
                        <div class="card p-3" style="cursor: pointer;">
                            <img src="/public/img/bg.png" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=colabor.title %>
                                </h5>
                                <p class="card-text">
                                    <%=colabor.detail%>
                                </p>
                                <p class="card-text">
                                    <span class="badge bg-secondary">
                                        <%=colabor.status%>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
        
        <!-- Edit form-->
        <div class="popup">
            <div class="popup-content">
                <img src="../public/img/cancel.png" alt="close" class="close">
                <input type="text" class="input-edit" id="edtitle" placeholder="Title">
                <input type="text" class="input-edit" id="eddetail" placeholder="Detail">
                <select class="input-edit" id="edstt">
                    <option value="Done">Done</option>
                    <option value="Undone">Undone</option>
                </select>
                <button class="btnsubmit">Submit</button>
                <button class="btndelete">Delete</button>
            </div>
        </div>
    </div>
    
</body>
<script src="https://unpkg.com/dayjs@1.8.21/dayjs.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="/public/js/project.js"></script>
<script src="/public/js/task.js"></script>
<script src="/public/js/logout.js"></script>
<script src="/public/js/changePassword.js"></script>


</html>