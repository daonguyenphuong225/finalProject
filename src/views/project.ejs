<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body>
    <div class="">
        <div class="parent">
            <nav class="navbar navbar-dark bg-primary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="project-list">Project</a>
                </div>
            </nav>
            <div class="d-flex align-items-center">
                <div class="d-flex align-items-center m-2 rounded-pill  bg-info">
                    <h6 class="fw-bold m-2">Search:</h6>
                    <form action="/category-list" method="GET">
                        <input name="name" class="inputWitdh m-2" type="text" value="<%=match.name%>" placeholder="Project name">
                        <select class="inputWitdh m-2" name="status">
                        <option value="undone">Undone</option>
                        <option value="done">Done</option>
                    </select>
                    <button class="btn btn-dark rounded-pill m-2 ">Search</button>
                </form>
            </div>
            <!-- nút thêm mới-->
            <button type="button" class="btn btn-success rounded-pill m-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Get New Project
            </button>

            <!-- Form thêm mới-->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Get New Project</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                <form action="/project" method="post" class="createForm">
                                    Title:<input name="title" type="text">
                                    Detail:<input name="detail" type="text">
                                    Status:<select name="status" id="">
                                        <option value="done">Done</option>
                                        <option value="undone">Undone</option>
                                    </select>
                                    Admin:<input name="admin" type="text">
                                    Users:<input name="users" type="text">
                                    tasks:<input name="tasks" type="text">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button  class="btn btn-primary">Get new</button>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
        </div>
        <div class="content">
            <div class="card-deck" style="display: flex;flex-wrap: wrap;">
                <div class="card" style="width: 30%;">
                    <img class="card-img-top" src="..." alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title">Card title</h5>
                      <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    </div>
                </div>
                <%for (const project of projectes) { %> 
                <div class="card" style="width: 30%;">
                    <img class="card-img-top" src="..." alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=project.title %>
                        </h5>
                        <p class="card-text"><%=project.detail%></p>
                        <p class="card-text"><%=project.status%></p>
                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    </div>
                </div>
                <% } %> 
            </div>
        </div>
    </div>
    </div>
</body>
<link rel="stylesheet" href="../public/css/project.css">
<script src="https://unpkg.com/dayjs@1.8.21/dayjs.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
    crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</html>